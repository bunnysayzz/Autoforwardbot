{
  "name": "telegram-autoforward-bot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:next dev:bot",
    "dev:next": "next dev",
    "dev:bot": "ts-node --compiler-options '{\"module\":\"commonjs\"}' scripts/run-polling.ts",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "deploy": "vercel --prod",
    "deploy:dev": "vercel",
    "setup-bot": "ts-node --compiler-options '{\"module\":\"commonjs\"}' scripts/setup.ts",
    "setup-webhook": "ts-node --compiler-options '{\"module\":\"commonjs\"}' scripts/setup-webhook.ts",
    "health-check": "ts-node --compiler-options '{\"module\":\"commonjs\"}' scripts/health-check.ts"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "next": "14.2.3",
    "node-telegram-bot-api": "^0.66.0",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/node-telegram-bot-api": "^0.64.9",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "dotenv": "^16.4.5",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
